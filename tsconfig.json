{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": [
    "src",
    "spec"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "types": [
    "@types/jasmine",
    "@types/node"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
